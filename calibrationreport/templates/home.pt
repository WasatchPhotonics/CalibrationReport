<!DOCTYPE html>
<html lang="${request.locale_name}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="calibration report web application">
    <link rel="shortcut icon" href="${request.static_url('calibrationreport:static/pyramid-16x16.png')}">

    <title>Calibration Report web application</title>

    <!-- Bootstrap core CSS -->
    <link href="${request.static_url('calibrationreport:static/bootstrap.css')}" rel="stylesheet">

    <!-- Custom styles for this scaffold -->
    <link href="${request.static_url('calibrationreport:static/theme.css')}" rel="stylesheet">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="//oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
  </head>

  <body>

    <div class="starter-template">

    <div class="container">
        <div class="row">
            <div class="col-xs-6">
<form id="cal_form" action="${request.route_url('cal_report')}" method="post" 
    accept-charset="utf-8" enctype="multipart/form-data">
  <div class="form-group">
    Serial: <textarea class="form-control" name="serial" id="serial"
       rows="1" cols="30">${fields.serial}</textarea>
    <BR>
    Calibration Coefficient 0: <textarea class="form-control" name="coeff_0" 
       rows="1" cols="30">${fields.coeff_0}</textarea>
    <BR>
    Calibration Coefficient 1: <textarea class="form-control" name="coeff_1" 
       rows="1" cols="30">${fields.coeff_1}</textarea>
    <BR>
    Calibration Coefficient 2: <textarea class="form-control" name="coeff_2" 
       rows="1" cols="30">${fields.coeff_2}</textarea>
    <BR>
    Calibration Coefficient 3: <textarea class="form-control" name="coeff_3" 
       rows="1" cols="30">${fields.coeff_3}</textarea>
    <BR>
    <BR>
    Image zero: <input id="image0_file_content" name="image0_file_content" type="file"
value="${fields.image0}"/>
    <BR>
    Image0 File: ${fields.image0}
    <BR>
    <BR>

    Image one: <input id="image1_file_content" name="image1_file_content" type="file"
value="${fields.image1}" />
    <BR>
    Image1 File: ${fields.image1}
    <BR>
    <BR>
  </div>
                  
  <div class="form-group">
    <button type="submit" name="form.submitted" value="Save" class="btn
btn-default">Generate</button>
  </div>
</form>
            </div>
            <div class="col-xs-6">
              <p class="lead">Generated Report:
<br>
<br>
<a id="pdf_link" href="/view_pdf/${fields.serial}">view pdf</a>
<br>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="//oss.maxcdn.com/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="//oss.maxcdn.com/libs/twitter-bootstrap/3.0.3/js/bootstrap.min.js"></script>
  </body>
</html>
